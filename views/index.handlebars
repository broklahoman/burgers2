<h1>Burgers</h1>

<h2>On the Menu</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Eat this burger, please!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>



<h2>In your belly</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">forget you ate this</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a new burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">New Burger:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

 

  <button type="submit">add burger</button>
</form>